{% extends 'base.html.twig' %}

{% block title %}My clothes{% endblock %}

{% block head %}
    {{ knp_pagination_rel_links(clothingItems) }}
{% endblock %}

{% block body %}
    <div class="container">
        <div class="justify-between">
            <h2>My clothes</h2>
            <a href="{{ path('app_clothes_add') }}" class="button">Add</a>
        </div>

        <div class="element-center-h">
            {% include 'clothing_item/_search.html.twig' %}

            <p>{{ clothingItems.getTotalItemCount }} items</p>

            {% include 'clothing_item/_list.html.twig' %}

            {{ knp_pagination_render(clothingItems) }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/search.js') }}"></script>
{% endblock %}
