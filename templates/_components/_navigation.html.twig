<ul>
    <li class="element-nav {{ app.request.get('_route') == 'app_home' ? 'active' : '' }}"><a
                href="{{ path('app_home') }}">home</a></li>
    {% if app.user %}
        <li class="element-nav {{ app.request.get('_route') == 'app_daily_weather' ? 'active' : '' }}"><a
                    href="{{ path('app_daily_weather') }}">outfits</a></li>
        <li class="element-nav {{ app.request.get('_route') == 'app_user_profile' ? 'active' : '' }}"><a
                    href="{{ path('app_user_profile') }}">profile</a></li>
        <li class="element-nav {{ app.request.get('_route') == 'app_settings' ? 'active' : '' }}"><a
                    href="{{ path('app_settings') }}">settings</a></li>
    {% endif %}
    <li class="element-nav {{ app.request.get('_route') == 'app_register' ? 'active' : '' }}"><a
                href="{{ path('app_register') }}">register</a></li>
    <li class="element-nav {{ app.request.get('_route') == 'app_logout' ? 'active' : '' }}"><a
                href="{{ path(app.user ? 'app_logout' : 'app_login') }}">log {{ app.user ? 'out' : 'in' }}</a></li>
</ul>
